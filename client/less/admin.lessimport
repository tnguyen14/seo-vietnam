.admin-content {
	// width: 80%;
	float: left;
}
.admin-menu {
	width: 20%;
	float: right;
	.nav-icon {
		float: right;
		font-size: 2em;
		background-color: #eee;
	}
	.nav-menu {
		font-size: 1.2em;
		.nav-menu-item {
			list-style: none;
		}
	}
}

.admin-list {
	thead > tr > th {
		// remove bold border bottom
		border-bottom: 0;
	}
	th {
		cursor: pointer;
		&:hover {
			text-decoration: underline;
		}
	}
	caption {
		margin: 1em 0;
	}
	.search {
		border-radius: 15px;
		width: 40%;
	}
}

