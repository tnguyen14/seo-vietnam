@blue: #489ac9;
@asphalt: #2c3e50;
@cloud: #ecf0f1;
@gold: #f5c056;
@dark: #262626;

.glow-input() {
	.transition(all 0.30s ease-in-out);
	outline: none;
	padding: 3px 0px 3px 3px;
	margin: 5px 1px 3px 0px;
	border: 1px solid #DDDDDD;
	&:focus{
		.box-shadow(0 0 5px rgba(81, 203, 238, 1));
		padding: 3px 0px 3px 3px;
		margin: 5px 1px 3px 0px;
		border: 1px solid rgba(81, 203, 238, 1);
	}
}